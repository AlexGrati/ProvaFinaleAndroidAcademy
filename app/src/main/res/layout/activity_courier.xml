<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.grati_alexandru.provafinaleandroidacademy.CourierActivity">


    <EditText
        android:id="@+id/editTextWAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextDDate"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="WarehouseAddress"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextWAdd"
        android:layout_below="@+id/editTextWAdd"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Delivery Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDAdd"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Delivery Date"
        android:inputType="datetime" />

    <Spinner
        android:id="@+id/spinnerSizeId"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextDDate"
        android:layout_below="@+id/editTextDDate"
        android:entries="@array/spinner_array"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/spinnerSizeId"
        android:layout_alignStart="@+id/editTextDDate"
        android:text="Size:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSizeId"
        android:layout_centerHorizontal="true"
        android:onClick="onPlaceButtonClicked"
        android:layout_marginTop="76dp"
        android:text="Place" />

</RelativeLayout>
